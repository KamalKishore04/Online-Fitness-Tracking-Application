package com.fitnesstracker.ui.admin;

import javax.swing.*;
import java.awt.*;

public class AdminDashboardFrame extends JFrame {

    public AdminDashboardFrame() {
        setTitle("Admin Dashboard");
        setSize(400, 300);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);

        JButton challengesBtn = new JButton("Manage Challenges");
        JButton contentBtn = new JButton("Content Moderation");
        JButton settingsBtn = new JButton("System Settings");
        JButton logsBtn = new JButton("Activity Logs");

        challengesBtn.addActionListener(e -> new AdminChallengeFrame());
        contentBtn.addActionListener(e -> new AdminContentModerationFrame());
        settingsBtn.addActionListener(e -> new AdminSystemSettingsFrame());
        logsBtn.addActionListener(e -> new AdminActivityLogFrame());

        setLayout(new GridLayout(4, 1, 10, 10));
        add(challengesBtn);
        add(contentBtn);
        add(settingsBtn);
        add(logsBtn);

        setVisible(true);
    }
}

